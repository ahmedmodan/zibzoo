    "env": "0.0.2",
    "eslint": "^1.10.3",
    "eslint-watch": "^2.1.4",
    "jasmine": "^2.4.1",
    "jasmine-core": "^2.4.1",
    "karma": "^0.13.19",
    "karma-chrome-launcher": "^0.2.2",
    "karma-jasmine": "^0.3.6",
    "karma-jasmine-html-reporter-livereload": "^1.0.0",
    "karma-nyan-reporter": "^0.2.3",
